<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".khoanchiScreen"
    tools:showIn="@layout/activity_khoanchi_screen">

    <TextView
        android:id="@+id/tv_mucChiTieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="509dp"
        android:text="Mục Chi Tiêu"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_giaTri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="421dp"
        android:text="Giá Trị"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_GhiChu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_giaTri"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="301dp"
        android:layout_marginBottom="-145dp"
        android:text="Ghi Chú"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_ThoiGian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="346dp"
        android:text="Thời Gian"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_mucChiTieu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_mucChiTieu"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="-38dp"
        android:layout_toEndOf="@+id/tv_mucChiTieu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_GiaTri"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_giaTri"
        android:inputType="number"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/tv_giaTri"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_GhiChu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_GiaTri"
        android:layout_marginBottom="-200dp"
        android:inputType="text"
        android:overScrollMode="always"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:textSize="16dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_ThoiGian"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_ThoiGian"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="1dp"
        android:layout_toEndOf="@+id/tv_ThoiGian"
        android:inputType="datetime" />

    <ImageButton
        android:id="@+id/bnt_ThoiGian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_date_range_black_24dp"
        android:layout_alignBottom="@+id/et_ThoiGian"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/et_ThoiGian" />
</RelativeLayout>